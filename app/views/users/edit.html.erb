<h1>User info</h1>
<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

 <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :profile_image, "Image" %><br />
    <%= f.file_field :profile_image, accept:"image/*" %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "Update User" %>
  </div>

<% end %>